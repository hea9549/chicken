<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nene.chicken.Presentation.Activity.MainActivity">

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/from_TextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:hint="출발지" />

    <TextView
        android:layout_below="@id/from_TextView"
        android:id="@+id/to_TextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:hint="도착지" />

    <LinearLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/to_TextView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal" />

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/wrapper_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        tools:background="#60000000">

        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"
            tools:text="14:20 ~" />

        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/tv_startTime"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_startTime"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"
            tools:text="14:40" />

        <TextView
            android:id="@+id/tv_takeTime"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"
            tools:text="20Min" />

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:textSize="16dp"
            tools:text="6m/s" />
    </RelativeLayout>
</RelativeLayout>
